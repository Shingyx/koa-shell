{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  }
}
